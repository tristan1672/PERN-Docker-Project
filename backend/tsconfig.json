{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "moduleResolution": "node",
      "module": "CommonJS",
      "target": "ES6",
      "esModuleInterop": true,
      "strict": true,
      "noEmit": true,
      "baseUrl": "./src",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }